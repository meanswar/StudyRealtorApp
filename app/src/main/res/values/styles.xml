<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:overScrollMode">never</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorLink">@color/textColorLink</item>
        <item name="android:statusBarColor">@color/peach</item>
        <item name="materialAlertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.ClickableView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">@dimen/size_0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:insetBottom">@dimen/size_0dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/size_24dp</item>
    </style>

    <style name="AppTheme.Button.Regular" parent="AppTheme.Button">
        <item name="android:minHeight">@dimen/size_48dp</item>
        <item name="android:textColor">@color/peach</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/bg_button_regular</item>
        <item name="strokeWidth">@dimen/size_1dp</item>
        <item name="strokeColor">@color/bg_stroke_button_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/font_oswald_medium</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="AppTheme.Button">
        <item name="android:minHeight">@dimen/size_48dp</item>
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/bg_button_primary</item>
        <item name="strokeWidth">@dimen/size_1dp</item>
        <item name="strokeColor">@color/bg_stroke_button_regular</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">@font/font_oswald_medium</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="AppTheme.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="AppTheme.EditTextRange">
        <item name="android:textColorHint">@color/peach</item>
        <item name="android:inputType">number</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Paragraph3.Teflon</item>
        <item name="android:background">@drawable/bg_filter_corner_8dp</item>
        <item name="android:padding">@dimen/size_4dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="AnimatedRecycleView">
        <item name="android:background">@drawable/bg_content_corners_10dp</item>
        <item name="android:padding">@dimen/size_10dp</item>
        <item name="android:visibility">invisible</item>
    </style>


    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
    </style>

