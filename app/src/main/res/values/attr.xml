<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableTextView">
        <attr name="title" format="string" />
        <attr name="style" format="reference" />
        <attr name="viewTarget" format="integer" />
    </declare-styleable>

    <declare-styleable name="RangeView">
        <attr name="endDrawable" format="reference" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="rangeType" format="integer">
            <enum name="money" value="0" />
            <enum name="other" value="1" />
        </attr>
        <attr name="rangeTitle" format="string" />
    </declare-styleable>
    <declare-styleable name="AnimatedRecyclerView">
        <attr name="layoutAnimation" format="reference" />
        <attr name="animationDuration" format="integer" />
        <attr name="layoutManagerOrientation" format="integer">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="pagerSnap" format="boolean" />
        <attr name="layoutManagerReverse" format="boolean" />
        <attr name="layoutManagerType" format="integer">
            <enum name="linear" value="0" />
            <enum name="grid" value="1" />
        </attr>
        <attr name="gridLayoutManagerColumns" format="integer" />
    </declare-styleable>

    <declare-styleable name="RealtorToolbar">
        <attr name="startAnimationSpeed" default="1.0" format="float" />
        <attr name="toolbar_title" format="string" />
    </declare-styleable>
    <declare-styleable name="SearchView">
        <attr name="drawableStart" format="reference" />
        <attr name="drawableEnd" format="reference" />
        <attr name="svHint" format="string" />
    </declare-styleable>
    <declare-styleable name="AnimatedImageView">
        <attr name="colorFrom" format="reference" />
        <attr name="colorTo" format="reference" />
        <attr name="colorFilled" format="reference" />
        <attr name="isRotated" format="boolean" />
        <attr name="isActive" format="boolean" />
        <attr name="animDuration" format="integer" />
    </declare-styleable>
    <declare-styleable name="WaveAttributes">
        <attr name="wave_count" format="integer"/>
        <attr name="animation_duration" format="integer"/>
        <attr name="wave_color" format="color"/>
        <attr name="animation_repeat_count" format="integer"/>
        <attr name="wave_radius" format="integer"/>
        <attr name="corner_radius" format="float"/>
        <attr name="wave_start_alpha" format="float"/>
        <attr name="wave_end_alpha" format="float"/>
    </declare-styleable>
</resources>