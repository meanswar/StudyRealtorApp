<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/size_20dp"
    app:cardElevation="@dimen/size_5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clContent"
        android:padding="@dimen/size_10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            style="@style/AppTheme.Text.Bold.Headline2.Teflon"
            tools:text="Bathroom"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvParentTitle"
            style="@style/AppTheme.Text.Bold.Headline4.Teflon"
            android:layout_marginTop="@dimen/size_4dp"
            tools:text="Interior"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDescription"
            android:layout_marginTop="@dimen/size_10dp"
            style="@style/AppTheme.Text.Paragraph3.Teflon"
            app:layout_constraintTop_toBottomOf="@id/tvParentTitle"
            tools:text="ads asdad asd adad asd asd asd asd asd asd a" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>