<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.nikitosii.studyrealtorapp.view.RealtorToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:startAnimationSpeed="2.5" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glStart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glEnd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPropertyPhotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/item_photo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBrandingContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/size_2dp"
                android:layoutAnimation="@anim/move_from_top"
                android:paddingVertical="@dimen/size_4dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/rvPropertyPhotos">

                <TextView
                    android:id="@+id/tvBranding"
                    style="@style/AppTheme.Text.Bold.Headline1.Teflon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Office Builds Inc." />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPropertyDescriptionContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:background="@drawable/bg_content_corners_10dp"
                android:elevation="@dimen/size_2dp"
                android:paddingHorizontal="@dimen/size_5dp"
                android:paddingVertical="@dimen/size_10dp"
                app:layout_constraintEnd_toEndOf="@id/glEnd"
                app:layout_constraintStart_toEndOf="@id/glStart"
                app:layout_constraintTop_toBottomOf="@id/clBrandingContent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPropertyAddress"
                    style="@style/AppTheme.Text.Bold.Headline4.Teflon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="New York, USA" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPropertyPrice"
                    style="@style/AppTheme.Text.Bold.Headline2.Teflon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6dp"
                    app:layout_constraintTop_toBottomOf="@id/tvPropertyAddress"
                    tools:text="AMV: $150 000" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPropertyBaths"
                    style="@style/AppTheme.Text.Paragraph4.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@id/tvPropertyPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvPropertyPrice"
                    tools:text="Baths: 2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPropertyBeds"
                    style="@style/AppTheme.Text.Paragraph4.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_6dp"
                    android:layout_marginEnd="@dimen/size_8dp"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@id/tvPropertyPrice"
                    app:layout_constraintEnd_toStartOf="@id/tvPropertyBaths"
                    app:layout_constraintTop_toTopOf="@id/tvPropertyPrice"
                    tools:text="Beds: 4" />

                <TextView
                    android:id="@+id/tvSalePropertyTime"
                    style="@style/AppTheme.Text.Paragraph4.Teflon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvPropertyPrice"
                    tools:text="Last Update: 15 Jan 2022, 15:00"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvPropertyDescriptionTitle"
                    style="@style/AppTheme.Text.Bold.Headline3.Teflon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:text="@string/screen_sale_property_details_property_description_title"
                    app:layout_constraintStart_toStartOf="@id/tvPropertyPrice"
                    app:layout_constraintTop_toBottomOf="@id/tvSalePropertyTime" />

                <TextView
                    android:id="@+id/tvDescriptionSaleType"
                    style="@style/AppTheme.Text.Paragraph4.Teflon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@id/tvPropertyPrice"
                    app:layout_constraintTop_toBottomOf="@id/tvPropertyDescriptionTitle"
                    tools:text="Sale Type: For Sale"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvPropertyDescription"
                    style="@style/AppTheme.Text.Paragraph4.Teflon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    app:layout_constraintStart_toStartOf="@id/tvPropertyPrice"
                    app:layout_constraintTop_toBottomOf="@id/tvDescriptionSaleType"
                    tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>