<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFirstHouse"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/peach" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivSecHouse"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginStart="@dimen/size_5dp"
            app:layout_constraintStart_toEndOf="@id/ivFirstHouse"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/peach" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivThirdHouse"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFirstHouse"
            tools:background="@color/peach" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFourthHouse"
            android:layout_width="@dimen/size_40dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginStart="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            app:layout_constraintStart_toEndOf="@id/ivFirstHouse"
            app:layout_constraintTop_toBottomOf="@id/ivFirstHouse"
            tools:background="@color/peach" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>