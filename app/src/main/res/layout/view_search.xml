<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        style="@style/AppTheme.Text.Paragraph3.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_field_hint"
        android:textColorHint="@color/gandalf_the_grey"
        app:boxCornerRadiusBottomEnd="@dimen/size_15dp"
        app:boxCornerRadiusTopStart="@dimen/size_15dp"
        app:boxStrokeColor="@android:color/transparent"
        app:boxStrokeWidth="0dp"
        android:transitionName="tvFilter"
        app:boxStrokeWidthFocused="0dp"
        app:hintTextColor="@color/peach"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_search">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearch"
            style="@style/AppTheme.Text.Paragraph3.Grey"
            android:layout_width="match_parent"
            android:imeOptions="actionDone"
            android:focusableInTouchMode="true"
            android:inputType="text"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>