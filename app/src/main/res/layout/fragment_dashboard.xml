<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingHorizontal="@dimen/size_20dp"
    tools:background="@drawable/bg_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTopContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/anim_top_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:layoutAnimation="@null">

            <TextView
                android:id="@+id/tvUserWelcome"
                style="@style/AppTheme.Text.Paragraph3.Grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/screen_dashboard_welcome_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDashboardTitle"
                style="@style/AppTheme.Text.Bold.Headline2.Teflon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="@string/screen_dashboard_description_title"
                app:layout_constraintStart_toStartOf="@id/tvUserWelcome"
                app:layout_constraintTop_toBottomOf="@id/tvUserWelcome" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvProfileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/peach"
                app:cardCornerRadius="@dimen/size_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvUserWelcome">

                <ImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="@dimen/size_40dp"
                    android:layout_height="@dimen/size_40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_profile" />
            </com.google.android.material.card.MaterialCardView>

            <com.nikitosii.studyrealtorapp.view.SearchView
                android:id="@+id/svSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_30dp"
                android:background="@drawable/bg_content_corners_10dp"
                app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:padding="@dimen/size_10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/svSearch"
                tools:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white_transparent"
                    app:cardCornerRadius="@dimen/size_10dp"
                    app:cardElevation="@dimen/size_0dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.nikitosii.studyrealtorapp.view.AnimatedFilterImageView
                            android:id="@+id/ivHouse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            app:isRotated="true"
                            android:paddingVertical="@dimen/size_10dp"
                            android:src="@drawable/ic_house_24dp"
                            app:animDuration="300" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.nikitosii.studyrealtorapp.view.AnimatedFilterImageView
                            android:id="@+id/ivPrice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            app:isRotated="true"
                            android:paddingVertical="@dimen/size_10dp"
                            android:src="@drawable/ic_price_24dp"
                            app:animDuration="200" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.nikitosii.studyrealtorapp.view.AnimatedFilterImageView
                            android:id="@+id/ivBed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            app:isRotated="true"
                            android:paddingVertical="@dimen/size_10dp"
                            android:src="@drawable/ic_bed_24dp"
                            app:animDuration="200" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.nikitosii.studyrealtorapp.view.AnimatedFilterImageView
                            android:id="@+id/ivBath"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            app:isRotated="true"
                            android:paddingVertical="@dimen/size_10dp"
                            android:src="@drawable/ic_bath_24dp"
                            app:animDuration="200" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <com.nikitosii.studyrealtorapp.view.AnimatedFilterImageView
                            android:id="@+id/ivSqft"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            app:isRotated="true"
                            android:paddingVertical="@dimen/size_10dp"
                            android:src="@drawable/ic_sqft"
                            app:animDuration="200" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFilterAttributes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/clFilters">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clFilterHouse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:paddingHorizontal="@dimen/size_20dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvFilterHouses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white_transparent"
                        app:cardCornerRadius="@dimen/size_10dp"
                        app:cardElevation="@dimen/size_0dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.nikitosii.studyrealtorapp.view.AnimatedRecyclerView
                            android:id="@+id/rvFilterHouses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/size_10dp"
                            app:animationDuration="500"
                            app:gridLayoutManagerColumns="3"
                            app:layoutAnimation="@anim/recycle_view_anim"
                            app:layoutManagerReverse="false"
                            app:layoutManagerType="grid"
                            tools:itemCount="9"
                            tools:listitem="@layout/item_filter_house" />

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvRangePrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_20dp"
                    android:background="@drawable/bg_content_almost_transparent_corners_10dp"
                    android:paddingHorizontal="@dimen/size_10dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_money"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxValue="5000000"
                    app:minValue="0"
                    app:stepValue="1"
                    tools:visibility="visible" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvRangeBeds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_20dp"
                    android:background="@drawable/bg_content_almost_transparent_corners_10dp"
                    android:paddingHorizontal="@dimen/size_10dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_bed_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxValue="15"
                    app:minValue="1"
                    app:stepValue="1"
                    tools:visibility="visible" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvRangeBaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_20dp"
                    android:background="@drawable/bg_content_almost_transparent_corners_10dp"
                    android:paddingHorizontal="@dimen/size_10dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_bath_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxValue="15"
                    app:minValue="1"
                    app:stepValue="1"
                    tools:visibility="visible" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvRangeSquare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_20dp"
                    android:background="@drawable/bg_content_almost_transparent_corners_10dp"
                    android:paddingHorizontal="@dimen/size_10dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_sqft"
                    app:layout_constraintTop_toTopOf="parent"
                    app:maxValue="5000"
                    app:minValue="0"
                    app:stepValue="1"
                    tools:visibility="visible" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/llTypeOfSearching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/size_4dp"
                app:layout_constraintTop_toBottomOf="@id/clFilterAttributes">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuy"
                    style="@style/AppTheme.Button.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:elevation="@dimen/size_2dp"
                    android:text="@string/screen_dashboard_btn_buy_title" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRent"
                    style="@style/AppTheme.Button.Regular"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:elevation="@dimen/size_2dp"
                    android:text="@string/screen_dashboard_btn_rent_title" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBottomContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clTopContent">

            <androidx.constraintlayout.widget.Group
                android:id="@+id/grRecentContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tvRecentSearches, rvRecentSearches" />

            <TextView
                android:id="@+id/tvRecentSearches"
                style="@style/AppTheme.Text.Bold.Headline2.Teflon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recent_searches_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.nikitosii.studyrealtorapp.view.AnimatedRecyclerView
                android:id="@+id/rvRecentSearches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:animationDuration="500"
                app:layoutManagerOrientation="horizontal"
                app:layoutManagerReverse="false"
                app:layoutManagerType="linear"
                app:layout_constraintTop_toBottomOf="@id/tvRecentSearches"
                tools:itemCount="5"
                tools:listitem="@layout/item_photo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/tvRecentSearches"
                app:reverseLayout="false"
                tools:itemCount="5"
                tools:listitem="@layout/item_recent_search" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>