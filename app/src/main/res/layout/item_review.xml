<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:background="@drawable/bg_content_white_corners_10dp"
        android:elevation="@dimen/size_20dp"
        android:paddingHorizontal="@dimen/size_10dp"
        android:paddingVertical="@dimen/size_5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAuthor"
            style="@style/AppTheme.Text.Bold.Headline2.Teflon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/size_20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nick Fury " />

        <TextView
            android:id="@+id/tvRating"
            style="@style/AppTheme.Text.Bold.Headline4.Peach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_10dp"
            app:drawableEndCompat="@drawable/ic_rating"
            app:drawableTint="@color/peach"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvAuthor"
            tools:text="4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/size_0dp"
        app:cardCornerRadius="@dimen/size_20dp"
        app:cardElevation="@dimen/size_10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/size_20dp"
            android:paddingTop="@dimen/size_40dp"
            android:paddingBottom="@dimen/size_10dp">

            <TextView
                android:id="@+id/tvDescription"
                style="@style/AppTheme.Text.Paragraph4.Teflon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/tools_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>