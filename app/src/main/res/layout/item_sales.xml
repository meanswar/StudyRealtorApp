<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="@dimen/size_2dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/size_10dp">

    <TextView
        android:id="@+id/tvBrandingName"
        style="@style/AppTheme.Text.Bold.Headline3.Teflon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/peach"
        android:paddingVertical="@dimen/size_5dp"
        android:paddingStart="@dimen/size_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Brand and Co." />

    <ImageView
        android:id="@+id/ivBrandingLogo"
        android:layout_width="@dimen/size_40dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginStart="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:elevation="@dimen/size_3dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivSoldProperty"
        tools:src="@drawable/logo" />

    <com.viceboy.widget.TriangularShadeImageView
        android:id="@+id/ivSoldProperty"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_0dp"
        android:scaleType="centerCrop"
        android:transitionName="properties_photo"
        android:visibility="invisible"
        app:firstTriangleAnimDelay="80"
        app:firstTriangleAnimDuration="200"
        app:firstTriangleDrawDir="BOTTOM_RIGHT"
        app:layout_constraintDimensionRatio="H,1.8:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBrandingName"
        app:secondTriangleAnimDelay="50"
        app:secondTriangleAnimDuration="500"
        app:secondTriangleDrawDir="BOTTOM_RIGHT"
        app:secondTriangleSize="150dp"
        tools:src="@drawable/london" />

    <ImageView
        android:id="@+id/ivNotSoldProperty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:transitionName="properties_photo"
        app:layout_constraintDimensionRatio="H,1.8:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBrandingName"
        tools:src="@drawable/london" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lavSoldStatus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="H,2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="anim_sold.json"
        app:lottie_loop="true"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical03Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical03End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical06Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical06End"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.70"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty" />


    <ImageView
        android:id="@+id/ivImageStart"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_5dp"
        app:layout_constraintDimensionRatio="H,1.5:1"
        app:layout_constraintEnd_toEndOf="@id/glVertical03Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty"
        tools:src="@drawable/london" />

    <ImageView
        android:id="@+id/ivImageMiddle"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_5dp"
        app:layout_constraintDimensionRatio="H,1.5:1"
        app:layout_constraintEnd_toStartOf="@id/glVertical06Start"
        app:layout_constraintStart_toStartOf="@id/glVertical03End"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty"
        tools:src="@drawable/london" />

    <ImageView
        android:id="@+id/ivImageEnd"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_5dp"
        app:layout_constraintDimensionRatio="H,1.5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/glVertical06End"
        app:layout_constraintTop_toBottomOf="@id/ivSoldProperty"
        tools:src="@drawable/london" />

    <TextView
        android:id="@+id/tvHouseTitle"
        style="@style/AppTheme.Text.Bold.Headline4.Teflon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_10dp"
        android:layout_marginTop="@dimen/size_4dp"
        app:layout_constraintTop_toBottomOf="@id/ivImageStart"
        tools:text="Berkshire Hathaway HomeServices Blake" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSalesPrice"
        style="@style/AppTheme.Text.Bold.Headline5.Teflon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_marginEnd="@dimen/size_10dp"
        android:background="@drawable/bg_content_corners_10dp"
        android:drawableEnd="@drawable/ic_money"
        android:gravity="center"
        android:padding="@dimen/size_5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivSoldProperty"
        tools:text="4, 000, 000" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRooms"
        style="@style/AppTheme.Text.Bold.Headline5.Teflon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_10dp"
        android:drawableEnd="@drawable/ic_bed_24dp"
        android:drawablePadding="@dimen/size_10dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHouseTitle"
        tools:text="4 rooms" />

</androidx.constraintlayout.widget.ConstraintLayout>