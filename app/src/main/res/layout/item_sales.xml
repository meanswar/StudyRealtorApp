<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/size_2dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/size_10dp"
    app:cardElevation="@dimen/size_2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/almost_white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSales"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,3:1.25"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/london" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_10dp"
            app:layout_constraintTop_toBottomOf="@id/ivSales">

            <TextView
                android:id="@+id/tvHouseTitle"
                style="@style/AppTheme.Text.Bold.Headline4.Teflon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Berkshire Hathaway HomeServices Blake" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSalesPrice"
                style="@style/AppTheme.Text.Bold.Headline5.Teflon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_4dp"
                android:drawableEnd="@drawable/ic_money"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@id/tvRooms"
                app:layout_constraintTop_toBottomOf="@id/tvHouseTitle"
                tools:text="4, 000, 000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRooms"
                style="@style/AppTheme.Text.Bold.Headline5.Teflon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_bed_24dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHouseTitle"
                tools:text="4 rooms" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>