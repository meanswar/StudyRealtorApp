<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Sales Filter"
        app:titleCentered="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/btnBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/size_8dp"
        android:layout_marginStart="@dimen/size_8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/tbFilter"
        app:layout_constraintDimensionRatio="V,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tbFilter"
        app:lottie_autoPlay="false"
        app:lottie_fileName="arrow_back.json" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="@dimen/size_20dp"
        android:paddingBottom="@dimen/size_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbFilter">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_20dp">


            <androidx.constraintlayout.widget.Group
                android:id="@+id/gMainContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tvRecentTitle, rvRecentSearches, tvSuggestedTitle, rvFavorites" />

            <include
                android:id="@+id/lFilter"
                layout="@layout/view_search"
                android:transitionName="tvFilter" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:background="@drawable/bg_content_corners_4dp"
                android:elevation="@dimen/size_2dp"
                android:padding="@dimen/size_10dp"
                app:layout_constraintTop_toBottomOf="@id/lFilter">

                <com.nikitosii.studyrealtorapp.view.ExpandableTextView
                    android:id="@+id/tvFilterHouses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:style="@style/AppTheme.Text.Paragraph3.Teflon"
                    app:title="Houses"
                    app:viewTarget="@id/rvContent" />

                <com.nikitosii.studyrealtorapp.view.ExpandableTextView
                    android:id="@+id/tvFilterPrices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/tvFilterHouses"
                    app:layout_constraintTop_toTopOf="parent"
                    app:style="@style/AppTheme.Text.Paragraph3.Teflon"
                    app:title="Prices"
                    app:viewTarget="@id/rvFilterPrices" />

                <com.nikitosii.studyrealtorapp.view.ExpandableTextView
                    android:id="@+id/tvFilterBeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/tvFilterPrices"
                    app:layout_constraintTop_toTopOf="parent"
                    app:style="@style/AppTheme.Text.Paragraph3.Teflon"
                    app:title="@string/view_filter_title_beds"
                    app:viewTarget="@id/rvFilterBeds" />

                <com.nikitosii.studyrealtorapp.view.ExpandableTextView
                    android:id="@+id/tvFilterBaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/tvFilterBeds"
                    app:layout_constraintTop_toTopOf="parent"
                    app:style="@style/AppTheme.Text.Paragraph3.Teflon"
                    app:title="@string/view_filter_title_baths"
                    app:viewTarget="@id/rvFilterBeds" />

                <com.nikitosii.studyrealtorapp.view.ExpandableTextView
                    android:id="@+id/tvFilterSquare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/tvFilterBaths"
                    app:layout_constraintTop_toTopOf="parent"
                    app:style="@style/AppTheme.Text.Paragraph3.Teflon"
                    app:title="@string/view_filter_title_square"
                    app:viewTarget="@id/rvFilterSquare" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/bg_bottom_corners_almost_white_15dp"
                    android:elevation="@dimen/size_2dp"
                    android:orientation="vertical"
                    android:paddingVertical="@dimen/size_10dp"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFilterHouses"
                    app:spanCount="3"
                    tools:itemCount="9"
                    tools:listitem="@layout/item_filter_house" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvFilterPrices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_money"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFilterPrices" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvFilterBeds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_bed_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFilterPrices" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvFilterSquare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFilterPrices" />

                <com.nikitosii.studyrealtorapp.view.RangeView
                    android:id="@+id/rvFilterBaths"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:visibility="gone"
                    app:endDrawable="@drawable/ic_bath"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvFilterPrices" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvRecentTitle"
                style="@style/AppTheme.Text.Bold.Headline2.Teflon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:text="@string/recent_searches_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clFilters" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentSearches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRecentTitle"
                tools:itemCount="5"
                tools:listitem="@layout/item_searches" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSuggestedTitle"
                style="@style/AppTheme.Text.Bold.Headline2.Teflon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:text="@string/layout_search_favorite_list_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvRecentSearches" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFavorites"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_30dp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/cvAccept"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSuggestedTitle"
                tools:itemCount="5"
                tools:listitem="@layout/item_favorite_searches" />

            <com.nikitosii.studyrealtorapp.view.AnimatedRecyclerView
                android:id="@+id/rvSaleProperties"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:background="@drawable/bg_content_corners_10dp"
                android:padding="@dimen/size_10dp"
                android:visibility="invisible"
                app:animationDuration="1500"
                app:layoutAnimation="@anim/recycle_view_anim"
                app:layoutManagerOrientation="vertical"
                app:layoutManagerReverse="false"
                app:layoutManagerType="linear"
                app:layout_constraintBottom_toTopOf="@id/cvAccept"
                app:layout_constraintTop_toBottomOf="@+id/clFilters"
                tools:itemCount="10"
                tools:listitem="@layout/item_sales" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAccept"
                style="@style/AppTheme.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_4dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/size_24dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccept"
                    style="@style/AppTheme.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/btn_filter_title"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.cardview.widget.CardView>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lavLoading"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="3dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="false"
                app:lottie_fileName="loading.json"
                app:lottie_loop="true"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>